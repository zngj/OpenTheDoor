<!--index.wxml-->
<view class="container">
  
  <view style="height:140;background-color:#35405c;text-align:center">
    <view style="padding-top:31px;">
      <text style="font-size:30px;color:#fafafa">¥{{userBalance}} </text>
    <button class="weui-btn mini-btn" type="default" size="mini" bindtap="recharge">充值</button>
    </view>
    
  </view>
  <view class="weui-cells weui-flex weui-cells_after-title" style="padding:40rpx 0rpx">
    
    <view class="weui-flex__item" >
    </view>
    <view class="weui-flex__item" >
  <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="gateIn">进站</button>
    </view>
    <view class="weui-flex__item" >
  <button class="weui-btn mini-btn" type="default" size="mini" bindtap="gateOut">出站</button>
    </view>
    <view class='weui-flex__item'>
    </view>
  </view>


  <picker bindchange="bindPickerChange" value="0" range="{{dataSetDesc}}" style="display:none;" >
      <button type="default">切换测试数据集</button>
  </picker>
</view>

<view class="page__ft">
  <view class="weui-cells__tips">{{app.globalData.name}}</view>
</view>